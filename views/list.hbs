{{> head }}
    <body>
        {{> header }}
        {{> navbar }}

        {{# if person }}
        <table id='myTable' class='row-border'>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Endereço</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Estado</th>
                    {{#if admin }}
                    <th>Ações</th>
                    {{/if}}
                </tr>
            </thead>
            <tbody>
                {{# each person }}
                <tr>
                    <td><a href='/details/{{ this.id }}'>{{ this.id }}</a></td>
                    <td><a href='/details/{{ this.id }}'>{{ this.name }}</a></td>
                    <td><a href='/details/{{ this.id }}'>{{ this.address }}</a></td>
                    <td><a href='/details/{{ this.id }}'>{{ this.phone }}</a></td>
                    <td><a href='/details/{{ this.id }}'>{{ this.email }}</a></td>
                    <td><a href='/details/{{ this.id }}'>{{ this.state }}</a></td>
                    {{#if @root.admin }}
                    <td>
                        <i user-id='{{this.id}}' path='/delete_person/' data-target='delModal' class='fas fa-trash modal-trigger'></i>
                    </td>
                    {{/if}}
                </tr>
                {{/ each }}
            </tbody>
        </table>
        {{else}}
        <p class='rep'>... Nenhuma pessoa encontrada ...</p>
        {{/ if}}

        {{> delete_modal }}
        {{>footer}}
    </body>
</html>

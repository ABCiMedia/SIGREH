{{> head }}

<body>
    {{> header }}
    {{> navbar }}
    {{# if formation}}
    <form onsubmit='enableTotal()' class='formation-form' action="/choose_formation/{{personId}}" method='post'>
        {{#each formation}}
        <fieldset>
            <b>Nome:</b>
            <span>{{this.name}}</span><br>
            
            <b>Preço de Inscrição:</b>
            <span>{{this.subscription_cost}}$00</span><br>

            <b>Preço do Certificado:</b>
            <span>{{this.certificate_cost}}$00</span><br>

            <label for='{{this.id}}'>
                <input data-insc={{this.subscription_cost}} data-cert={{this.certificate_cost}} oninput='calculateTotal()' type="checkbox" name='{{this.id}}' id='{{this.id}}'>
                <span>Escolher</span>
            </label>
        </fieldset>
        {{/each}}
        <fieldset class='row'>
            <div class='input-field col s6'>
                <label for='discount'>Desconto:</label>
                <input type='number' name='discount' value='0' id='discount' oninput='calculateTotal()' style='text-align: right'>
                <span>%</span>
            </div>
            <div class='input-field col s6'>
                <label>Total a Pagar:</label>
                <input name='total' id='total' value='0' disabled style='text-align: right'>
            </div>
        </fieldset>

        <input class='btn blue' type="submit" value='Increver'>
    </form>
    {{else}}
    <p class='rep'>Já se registrou em todas as formações...</p>
    {{/if}}

    {{> delete_modal }}
    {{>footer}}
</body>

</html>
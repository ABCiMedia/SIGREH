{{> head }}

<body>
    {{> header }}
    {{> navbar }}
    {{# if person}}
    <div class='card card-admin'>
        <table class='tbl'>
            <thead>
                <tr>
                    <th>Nome de Utilizador</th>
                    <th>Grupo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                {{# each person }}
                <tr>
                    <td>{{ this.dataValues.username }}</td>
                    <td>{{ this.dataValues.group }}</td>
                    <td>
                        <img class='icon' onclick='showModal({{ this.dataValues.id }}, "/delete_user/")' src='/img/trash-alt-solid.svg' alt='editar'>
                    </td>
                </tr>
                {{/ each }}
            </tbody>
        </table>
    </div>
    {{else}}
    <p class='rep'>Ainda sem nenhum utilizadores</p>
    {{/if}}
    <i class='fas fa-plus-circle add-btn' onclick='loadPage("/create_user")'></i>
    {{> delete_modal }}
    {{>footer}}
</body>

</html>